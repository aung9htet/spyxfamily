<body onload="init()" class="bg-light">
<div class="container mt-5">
    <h1 class="text-center text-body display-1"><%= title %></h1>
</div>
<canvas style="display:none;" id="canvas"></canvas>

<div class="container mt-5 d-flex justify-content-md-center">
    <div class="card shadow">
        <div class="card-body">
            <form id=â€œxForm" class = "form-group " enctype="multipart/form-data" onsubmit="onSubmit('/insert')">
                <p><label for='title' class="font-weight-bold">Title</label>
                    <input type="text" class="form-control" name="title" id="title" value="Mouse">
                </p>
                <p><label for='shorttext' class="font-weight-bold">Short Text</label>
                    <input type="text" class="form-control" name="shorttext" id="shorttext" value="Mickey">
                </p>
                <p><label for='authorname' class="font-weight-bold">Author Name</label>
                    <input type="text" class="form-control" name="authorname" id="authorname" value="Mouse">
                </p>
                <p><label for='dateofissue' class="font-weight-bold">Date of Issue</label>
                    <input type="date" class="form-control" name="dateofissue" id="dateofissue">
                </p>
                <p><label for='image' class="font-weight-bold">Image</label>
                    <input type="file" class="form-control-file custom-file " name="myImage" id="myImage" accept="image/png, image/jpeg" onchange="readImage(this)">
                </p>
                <div class="row">
                    <div class="col text-center ">
                        <p><input type="submit" class="btn btn-primary btn-block" name="g" value="Submit" id="g"></p>
                    </div>
                </div>
            </form>
        </div>
        <div id="results" style="margin-top:30px"></div>
    </div>
</div>
