    <style>
        img {
            max-width: 100%;
            height: auto;
        }
        .centerBlock {
            display: table;
            margin: auto;
        }
        .card:hover{
            transition: 1s;
            transform:scale(1.05);
            cursor: pointer;

        }
        .card:hover img{
            transition: 1s;
            opacity: 0.7;

        }
        #createBtn:hover{
            transition: 0.7s;
            transform:scale(1.05);
        }
        .btnOnImage {
            position: relative;
        }
        .btnOnImage .imageBtn {
            display: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            padding: 12px 24px;
            border: none;
        }
        .card:hover .btnOnImage .imageBtn{
            transition: 1s;
            display: block;
        }
        .imageBtn{
            width: 45%;
        }
        .imageBtn:hover{
            transition: 0.7s;
            background-color: white;
            color: #00B7FF;
            width: 80%;
        }
    </style>
